//second-main
.second-main {
  background: #f7f7f7;
}

.about {
  padding-top: 40px;
  padding-bottom:40px ;
  // height: 400px;
  // background: salmon;
}

.about-container {
  border: 5px solid seagreen;
  box-sizing: border-box;
  padding: 15px 30px 30px 30px;
  width: 90%;
  max-width: 900px;
  margin: 0 auto;
  background: #fff;
  border-radius: 8px;
  box-shadow: 2px 2px 10px rgba($color: #000000, $alpha: 0.3);
}

.title {
  h2 {
    font-size: 28px;
    text-align: center;
    color: #363636;
  }
  span {
    font-family: 'Caveat', cursive;
    font-size: 32px;
    margin-right: 7px;
  }
}

.about-text {
  text-align: center;
  padding-top: 20px;
  p {
    font-size: 20px;
    letter-spacing: 1.1px;
  }
}

.posible-container {
  border: 5px solid steelblue;
  box-sizing: border-box;
  padding: 20px 30px 0px 30px;
  width: 90%;
  max-width: 900px;
  margin: 0 auto;
  background: #fff;
  border-radius: 8px;
  box-shadow: 2px 2px 10px rgba($color: #000000, $alpha: 0.3);
}

.posible-title {
  padding-bottom: 30px;
}

.posible-list-content {
  display: flex;
  padding-bottom: 30px;
  max-width: 750px;
  margin: 0 auto;
  .posible-list-title {
    h3 {
      padding-bottom: 10px;
      color: #363636;
    }
    span {
      margin: 0 5px;
      color: steelblue;
    }

    .home-img {
      width: 230px;
      height: auto;
    }
  }

  .posible-list-text {
    p {
      margin-left: 30px;
      margin-top: 32px;
      font-size: 18px;
      letter-spacing: 1.2px;
      border: 3px solid steelblue;
      padding: 10px;
      box-sizing: border-box;
      border-radius: 12px;
      position: relative;
      text-decoration: underline;
      text-decoration-color:steelblue ;
    }

    p:before {
      content: '';
      border: 12px solid transparent;
      position: absolute;
      border-right: 12px solid #fff;
      left: -24px;
      top: 11px;
      z-index: 2;
    }

    p:after {
      content: '';
      border: 14px solid transparent;
      position: absolute;
      border-right: 14px solid steelblue;
      left: -30px;
      top: 9px;
    }
  }
}

