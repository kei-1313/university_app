<div class="user-edit all-wrapper">
  <div class="user-edit-container all-container">
    <div class="user-edit-title">
      <p><%= link_to "前のページに戻る>>", :back, class: 'user-edit-back' %></p>
      <h2>ユーザー編集</h2>
    </div>

      <div class="user-edit-content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="edit-field">
            <%= f.label :username,'ユーザー名', class: 'user-edit-label'%>
            <%= f.text_field :username, class: 'user-edit-field' %>
          </div>

          <div class="edit-field">
            <%= f.label :email, class: 'user-edit-label' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'user-edit-field' %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="edit-field">
            <%= f.label :password, class: 'user-edit-label' %>  
            <% if @minimum_password_length %>
              <span><%= @minimum_password_length %> 文字以上</span>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password",class: 'user-edit-field', id: 'more-than-six' %>
          </div>

          <div class="edit-field">
            <%= f.label :password_confirmation, class: 'user-edit-label' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password",class: 'user-edit-field' %>
          </div>

          <div class="edit-field">
            <%= f.label :current_password, class: 'user-edit-label' %> 
            <%= f.password_field :current_password, autocomplete: "current-password",class: 'user-edit-field' %>
          </div>


          <div class="edit-field">
            <%= f.label :student_id,'学籍番号', class: 'user-edit-label'%>
            <%= f.text_field :student_id, class: 'user-edit-field' %>
          </div>

          <div class="edit-field">
            <%= f.label :profile,'プロフィール', class: 'user-edit-label'%>
            <%= f.text_area :profile, class: 'user-edit-field user-edit-area', rows: 10 %>
          </div>

          <div class="edit-field">
            <%= f.label :profile_image,'プロフィール画像', class: 'user-edit-label'%>
            <%= f.attachment_field :profile_image, class: 'user-edit-field' %>
          </div>

          <div class="user-edit-submit-container">
            <%= f.submit '更新', class: 'user-edit-submit'%>
          </div>
        <% end %>

      </div>
   </div>
  </div>
</div>