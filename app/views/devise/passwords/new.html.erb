<div class="sign_up all-wrapper">
  <div class="sign_up-container all-container">
    <div class="sign_up-content">
      <div class="sign_up-title">
        <h2>パスワードお忘れの方</h2>
      </div>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-content">
          <%= f.label :email, 'メールアドレス',class: 'label-heading' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'sign_up-form-content' %>
        </div>

        <div class="actions sign_up-submit">
          <%= f.submit "送信", class: 'sign_up-submit-content' %>
        </div>
      <% end %>
    </div>
  </div>
</div>