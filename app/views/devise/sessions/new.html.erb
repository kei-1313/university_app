<div class="sign_up all-wrapper">
  <div class="sign_up-container all-container">
    <div class="sign_up-content">

      <div class="sign_up-title">
        <h2>ログイン</h2>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-content">
          <%= f.label :email,"メールアドレス", class: 'label-heading' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'sign_up-form-content' %>
        </div>

        <div class="field form-content">
          <%= f.label :password,"パスワード", class: 'label-heading' %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: 'sign_up-form-content' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions sign_up-submit">
          <%= f.submit "ログイン", class: 'sign_up-submit-content' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>